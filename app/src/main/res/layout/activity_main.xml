<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_fragment"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Fragment 切换" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:text="默认5栏"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp15" />


            <com.samluys.tablib.QFBottomTabLayout
                android:id="@+id/tl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:qf_background="@color/color_fafafa"
                app:qf_textSelectColor="#2C97DE"
                app:qf_textUnselectColor="#66000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:text="默认5栏 + 切换显示发布入口"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp15" />

            <com.samluys.tablib.QFBottomTabLayout
                android:id="@+id/tl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:qf_background="@color/color_fafafa"
                app:qf_publishMode="COVER"
                app:qf_textSelectColor="#2C97DE"
                app:qf_textUnselectColor="#66000000"
                app:qf_themeColor="@android:color/holo_purple" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:text="自定义导航栏TAB数量 最少2个最多6个"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp15" />

            <com.samluys.tablib.QFBottomTabLayout
                android:id="@+id/tl_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:qf_background="@color/color_fafafa"
                app:qf_textSelectColor="#2C97DE"
                app:qf_textUnselectColor="#66000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:text="纯文字"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp15" />

            <com.samluys.tablib.QFBottomTabLayout
                android:id="@+id/tl_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:qf_background="@color/color_fafafa"
                app:qf_iconVisible="false"
                app:qf_textSelectColor="#2C97DE"
                app:qf_textUnselectColor="#66000000"
                app:qf_textsize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:text="纯图片"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp15" />

            <com.samluys.tablib.QFBottomTabLayout
                android:id="@+id/tl_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:qf_background="@color/color_fafafa"
                app:qf_textSelectColor="#2C97DE"
                app:qf_textUnselectColor="#66000000"
                app:qf_textVisible="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:text="自定义发布在中间"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp15" />

            <com.samluys.tablib.QFBottomTabLayout
                android:id="@+id/tl_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:qf_background="@color/color_fafafa"
                app:qf_textSelectColor="#2C97DE"
                app:qf_textUnselectColor="#66000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:text="纯文字+发布按钮在中间+不可切换页面"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp15" />

            <com.samluys.tablib.QFBottomTabLayout
                android:id="@+id/tl_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:qf_background="@color/color_fafafa"
                app:qf_iconVisible="false"
                app:qf_textSelectColor="#2C97DE"
                app:qf_textUnselectColor="#66000000"
                app:qf_textsize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="12dp"
                android:text="纯文字+发布按钮固定在中间+可以切换页面"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp15" />

            <com.samluys.tablib.QFBottomTabLayout
                android:id="@+id/tl_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:qf_textSelectColor="#2C97DE"
                app:qf_textUnselectColor="#66000000"
                app:qf_textsize="18sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>